@using BDScoreSystem.Models
<h3>In memory data (not requiring server)</h3>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Venue</th>
            <th>Judge</th>
            <th>Result</th>
            <th>Placing</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Results)
        {
            <tr>
                <td>@result.Date</td>
                <td>@result.Venue</td>
                <td>@result.JudgeName</td>
                <td>@result.Result%</td>
                <td>@result.Placing</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter] public required List<DressageResultViewModel> Results { get; set; }
}